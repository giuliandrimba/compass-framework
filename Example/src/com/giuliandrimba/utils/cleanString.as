package com.giuliandrimba.utils{		public function cleanString(str:String):String	{		var arrPatterns:Array = new Array();		arrPatterns.push( { pattern:/[äáàâãª]/g,  char:'a' } );		arrPatterns.push( { pattern:/[ÄÁÀÂÃ]/g,  char:'A' } );		arrPatterns.push( { pattern:/[ëéèê]/g,   char:'e' } );		arrPatterns.push( { pattern:/[ËÉÈÊ]/g,   char:'E' } );		arrPatterns.push( { pattern:/[íîïì]/g,   char:'i' } );		arrPatterns.push( { pattern:/[ÍÎÏÌ]/g,   char:'I' } );		arrPatterns.push( { pattern:/[öóòôõº]/g,  char:'o' } );		arrPatterns.push( { pattern:/[ÖÓÒÔÕ]/g,  char:'O' } );		arrPatterns.push( { pattern:/[üúùû]/g,   char:'u' } );		arrPatterns.push( { pattern:/[ÜÚÙÛ]/g,   char:'U' } );		arrPatterns.push( { pattern:/[ç]/g,   char:'c' } );		arrPatterns.push( { pattern:/[Ç]/g,   char:'C' } );		arrPatterns.push( { pattern:/[ñ]/g,   char:'n' } );		arrPatterns.push( { pattern:/[Ñ]/g,   char:'N' } );				for( var i:uint = 0; i < arrPatterns.length; i++ )		{			str = str.replace( arrPatterns[i].pattern, arrPatterns[i].char );		}				arrPatterns = [];				return str;	}}